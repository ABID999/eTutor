<%- include('../partials/header.ejs') -%>
<%- include('../partials/alert.ejs') -%>

<div>

    <div class="container mt-5">
        <h1 class="text-center">E-Tutor</h1>
        <div class="card p-5 col-md-5 m-auto">
            <h3 class="mb-8 text-center">Student Login</h3>

            <form action="/student/login" method="POST">

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="text"
                        class="form-control <%= error.email ? 'border-red-500' : '' %> "
                        name="email" placeholder="Email" value="<%= value.email && value.email %>" />
                    <div class="text-danger">
                        <%= error.email && error.email %>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password"
                        class="form-control<%= error.password ? 'border-red-500' : '' %>"
                        name="password" placeholder="Password" value="<%= value.password && value.password %>" />
                </div>
                <div class="text-center">
                <button type="submit" class="btn btn-success">Sign In</button>
                </div>
            </form>


            <div class="text-grey-dark mt-6">
                Do not have an account?
                <a class="no-underline border-b border-blue text-blue" href="/student/register">
                    Sign up now!
                </a>
            </div>

        </div>

        
    </div>
</div>

<%- include('../partials/footer.ejs') %>


</body>

</html>