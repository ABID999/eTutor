<%- include('../partials/header.ejs') -%>
<%- include('./partials/tutorNav.ejs') %> 

<div class="container">

    <h2 class=" mb-3">Enrolled Classes</h2> 
    <div class="row"> 
        <% if(enrolledClasses.length === 0) {%>
            <h5 class="text-center">No students currenly enrolled in any of your classes.</h5>
        <% } else { %>  
            <% let i= 0;  %> 
            <% for(let classDetails of enrolledClasses){ %> 
                <% i++ %> 
                <div class="col-md-5 mb-3">
                    <div class="card border-dark mb-3">
                        <div class="card-header">Today</div>
                        <div class="card-body">
                            <h5 class="card-title"><%= classDetails.title %> </h5>
                            <p>Attendee: <span><%= classDetails.attendee %></span></p>
                            <p>Taught by: <span><%= classDetails.tutorName %></span></p>
                            <p>Scheduled time: <span><%= classDetails.schedule%></span></p>
                            <div>   
                                <a href="/tutor/enrolled_classes" class="btn btn-sm btn-primary">View</a>
                            </div>

                        </div>
                    </div>
                </div>
            <% } %> 
        <% } %>     
    </div>
    <a class="btn btn-sm btn-outline-primary" href="/tutor/enrolled_classes">Show all enrolled classes  <i class="bi bi-arrow-right"> </i></a>


    <div class="row justify-content-around mt-5"> 
        <h2 class=" mb-3">My Classes</h2>

        <% if(classes.length === 0) {%>
            <h3 class="text-center">No classes found.</h3>
        <% } else { %>  
            <% for(let classDetails of classes){ %> 
                <div class="col-md-4 mb-3">
                    <div class="card m-auto" style="width: 18rem;">
                        <img src="/<%= classDetails.banner || 'images/placeholder.jpg'%> " class="card-img-top img-fluid" style="width: 286px; height: 160px;" alt="...">
                        <div class="card-body">
                        <h5 class="card-title"><%= classDetails.title %> </h5>
                        <p class="card-text"><%= classDetails.description.substring(0,120) %> </p>
                        <p><b><%= classDetails.fee %></b> tk/hr</p>
                        <a href="/tutor/class/<%= classDetails._id %> " class="btn btn-sm btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            <% } %> 
        <% } %> 
    </div>
    <a class="btn btn-sm btn-outline-primary" href="/tutor/classes">View all classes <i class="bi bi-arrow-right"> </i></a>


    
    <div class="row justify-content-around mt-5"> 
        <h2 class=" mb-3">My Courses</h2>

        <% if(classes.length === 0) {%>
            <h3 class="text-center">No courses found.</h3>
        <% } else { %>  
            <% for(let classDetails of courses){ %> 
                <div class="col-md-4 mb-3">
                    <div class="card m-auto" style="width: 18rem;">
                        <img src="/<%= classDetails.banner || 'images/placeholder.jpg'%> " class="card-img-top img-fluid" style="width: 286px; height: 160px;" alt="...">
                        <div class="card-body">
                        <h5 class="card-title"><%= classDetails.title %> </h5>
                        <p class="card-text"><%= classDetails.description.substring(0,120) %> </p>
                        <p><b><%= classDetails.fee %></b> tk/hr</p>
                        <a href="/tutor/course/<%= classDetails._id %> " class="btn btn-sm btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            <% } %> 
        <% } %> 
    </div>
    <a class="btn btn-sm btn-outline-primary" href="/tutor/courses">View all classes <i class="bi bi-arrow-right"> </i></a>


    
</div>


<%- include('../partials/footer.ejs') -%>