<%- include('../partials/header.ejs') -%>


<div>
    <div class="container mt-5">
        <h1 class="mb-8 text-center"><a class="text-decoration-none" href="/">E-Tutor</a></h1>
        <div class="card p-5 col-md-5 m-auto">
            <h3 class="mb-8 text-center">Tutor Register</h3>


            <form action="/tutor/register" method="POST">

                <div class="mb-3">
                    <label class="form-label">Full name</label>
                    <input type="text" class="form-control" name="name" placeholder="Full Name"
                        value="<%= value.name && value.name %>" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email address</label>
                    <input type="text" class="form-control <%= error.email ? 'border-danger' : '' %>" name="email"
                        placeholder="Email" value="<%= value.email && value.email %>" />
                    <div class="danger">
                        <%= error.email && error.email %>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control <%= error.password ? 'border-danger' : '' %>"
                        name="password" placeholder="minimum 4 characters long" />
                    <div class="link-danger">
                        <%= error.password && error.password %>
                    </div>
                </div>
                <!-- <input type="password" class="block border border-grey-light w-full p-3 rounded mb-4"
                    name="confirm_password" placeholder="Confirm Password" /> -->

                <div class="text-center">
                    <button type="submit" class="btn btn-primary  mt-3 mb-3">CreateAccount</button>
                </div>
            </form>
            




            <div class="text-grey-dark mt-6 text-center mt-2">
                Already have an account?
                <a class="no-underline border-b border-blue text-blue" href="/tutor/login">
                    Sign in
                </a>
            </div>
        </div>
    </div>
</div>



<%- include('../partials/footer.ejs') %>

</body>

</html>